                <tr>
                    <td>AB 1234 CD</td>
                    <td>Kevan Altaf</td>
                    <td id="bus-capacity">30</td>
                </tr>
                <!-- Tambahkan baris-baris ini untuk informasi bus lainnya -->
            </table>
        </div>

        <div id="capacity-info">
            <p id="capacity-status"></p>
            <button id="boarding-button">Boarding (Naik Bus)</button>
            <button id="arrived-button">Arrived (Sampai)</button>
        </div>
    </div>

    <script>
        // Ambil elemen-elemen HTML yang diperlukan
        const busCapacityElement = document.getElementById('bus-capacity');
        const capacityStatusElement = document.getElementById('capacity-status');
        const boardingButton = document.getElementById('boarding-button');
        const arrivedButton = document.getElementById('arrived-button');

        // Inisialisasi kapasitas awal bus
        let busCapacity = 30;

        // Fungsi untuk memeriksa dan memperbarui kapasitas bus
        function updateBusCapacity() {
            if (busCapacity > 0) {
                busCapacity--;
                capacityStatusElement.textContent = `Masih ada ${busCapacity} kursi yang tersedia`;
            } else {
                busCapacity = 0;
                capacityStatusElement.textContent = 'Kursi Penuh';
            }
            busCapacityElement.textContent = busCapacity;
        }

        // Event listener untuk tombol Boarding
        boardingButton.addEventListener('click', function() {
            if (busCapacity > 0) {
                updateBusCapacity();
            } else {
                capacityStatusElement.textContent = 'Kursi Penuh';
            }
        });

        // Event listener untuk tombol Arrived
        arrivedButton.addEventListener('click', function() {
            if (busCapacity < 30) {
                busCapacity++;
                capacityStatusElement.textContent = `Masih ada ${busCapacity} kursi yang tersedia`;
            } else {
                capacityStatusElement.textContent = '30 kursi tersedia';
            }
            busCapacityElement.textContent = busCapacity;
        });
    </script>


